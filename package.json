{
  "name": "lighting-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run type-check && npm run lint && jest --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true npm run build",
    "bundle:analyze": "npx @next/bundle-analyzer",
    "perf:analyze": "node scripts/performance-analysis.js",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "perf:webvitals": "next dev --port 3001 & npx wait-on http://localhost:3001 && npx web-vitals http://localhost:3001",
    "deploy": "./scripts/deploy.sh",
    "deploy:vercel": "vercel --prod",
    "deploy:check": "curl -f http://localhost:3000/api/health",
    "mcp:server": "node mcp/server.js",
    "mcp:client": "node mcp/client.js",
    "mcp:start": "npm run mcp:server &",
    "mcp:db": "node mcp/client.js db",
    "mcp:perf": "node mcp/client.js perf",
    "mcp:deploy": "node mcp/client.js deploy check"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.3",
    "@tanstack/react-query": "^5.81.5",
    "@types/uuid": "^10.0.0",
    "@upstash/redis": "^1.35.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-intl": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "redis": "^5.5.6",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.0.3",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.5",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lighthouse": "^12.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0",
    "ws": "^8.18.3"
  }
}
