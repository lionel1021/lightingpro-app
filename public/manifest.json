    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/home.svg",
      "sizes": "1280x720",
      "type": "image/svg+xml",
      "platform": "wide",
      "label": "Home page showing featured lighting products"
    },
    {
      "src": "/screenshots/mobile-home.svg",
      "sizes": "375x667",
      "type": "image/svg+xml",
      "platform": "narrow",
      "label": "Mobile view of the home page"
    }
  ],
  "shortcuts": [
    {
      "name": "AI推荐",
      "short_name": "推荐",
      "description": "获取AI智能照明推荐",
      "url": "/questionnaire",
      "icons": [
        {
          "src": "/icons/shortcut-recommendations.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "产品浏览",
      "short_name": "产品",
      "description": "浏览照明产品",
      "url": "/products",
      "icons": [
        {
          "src": "/icons/shortcut-search.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "我的收藏",
      "short_name": "收藏",
      "description": "查看收藏的产品",
      "url": "/favorites",
      "icons": [
        {
          "src": "/icons/shortcut-favorites.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+lightingpro",
      "url": "/handle?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://lightingpro.app/manifest.json"
    }
  ]
}